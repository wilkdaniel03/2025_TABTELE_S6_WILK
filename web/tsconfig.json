{
	"compilerOptions": {
		"target": "es2016",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"lib": [ "DOM", "ESNext" ],
		"paths": {
			"@pages/*": ["./pages/*"],
			"@components/*": ["./components/*"],
			"@features/*": ["./features/*"],
			"@pages": ["./pages"],
			"@components": ["./components"],
			"@features": ["./features"],
			"@http": ["./http.ts"],
			"@stores/*": ["./stores/*"],
			"@stores": ["./stores"],
			"@websocket": ["./websocket.tsx"]
		}
	},
	"include": ["./src/**/*.ts","./src/**/*.tsx","./assets/*"],
	"exclude": ["./node_modules"]
}
